<div class="my-modal">
	<div class="my-modal-container">
		<div class="modal-header">
			<h2>اطلاعات کاربر</h2>
			<span class="modal-close">
				<i class="fa fa-times" aria-hidden="true"></i>
			</span>
		</div>
		<div class="modal-body">
			<div class="row">
				<div class="mb-3 col-md-6">
					<label class="form-label">نام و نام خانوادگی:</label>
					<input type="text" id="fullName" class="form-control" readonly>
				</div>
				<div class="mb-3 col-md-6">
					<label class="form-label">شماره تماس:</label>
					<input type="number" id="phone" class="form-control" readonly>
				</div>
				<div class="mb-3 col-md-6">
					<label class="form-label">کد ملی:</label>
					<input type="number" id="nationalCode" class="form-control" readonly/>
				</div>
				<div class="mb-3 col-md-6">
					<label class="form-label">ایمیل:</label>
					<input type="email" id="email" dir="ltr" class="form-control" style="text-align: end;" readonly>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<div class="col-12 d-flex justify-content-center">
				<button onclick="document.querySelector('.modal-close').click();" type="button" class="btn btn-secondary px-4">
					<i class='fas fa-reply'></i>
				</button>
			</div>
		</div>
	</div>
</div>