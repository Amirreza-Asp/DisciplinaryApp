@using DisciplinarySystem.Application.Helpers
@model DisciplinarySystem.Domain.Users.User



@section Styles{
	<link href="~/css/custome/modal.css" rel="stylesheet" />
}

@{
	String startDate = Model.AttendenceTime.From != default ? Model.AttendenceTime.From.ToShamsi() : "";
	String endDate = Model.AttendenceTime.To != default ? Model.AttendenceTime.To.ToShamsi() : "";
}


<partial name="_UserInfoPartial" />


<div class="d-flex justify-content-end mb-3">
	<button type="button" onclick="history.back()" class="btn btn-secondary d-flex align-items-center">
		بازگشت
		<i class="fa fa-angle-left me-2"></i>
	</button>
</div>


<div class="d-flex flex-column flex-sm-row align-items-sm-center  justify-content-between mb-2">
	<h3 class="mb-sm-0 mb-4">مشاهده عضو </h3>
</div>

<div class="card shadow-sm mt-3 mb-1">
	<div class="row">
		<div class="mb-3 col-md-4">
			<label class="form-label">نام و نام خانوادگی:</label>
			<input id="full-name" type="text" class="form-control" asp-for="FullName" readonly>
		</div>
		<div class="mb-3 col-md-4">
			<label class="form-label">کد ملی:</label>
			<input type="number" id="national-code" onchange="FindName(this)" class="form-control" value="@Model.NationalCode.Value" readonly>
		</div>
		<div id="btn-container" class="col-md-4 align-self-end mb-3">
			<button onclick="ShowInfo()" type="button" class="btn btn--show w-sm-100">
				مشاهده مشخصات
				<i class='fas fa-redo load-icon me-2'></i>
			</button>
		</div>
	</div>


	<div class="row">
		<div class="mb-3 col-md-4">
			<label class="form-label">نقش:</label>
			<div class="dropdown">
				<input value="@Model.Role.Title" class="form-control" readonly />
			</div>
		</div>
		<div class="mb-3 col-md-4">
			<label class="form-label">تاریخ حضور:</label>
			<input class="form-control" value="@startDate" readonly>
		</div>
		<div class="mb-3 col-md-4">
			<label class="form-label">تاریخ پایان:</label>
			<input class="form-control" value="@endDate" readonly>
		</div>
	</div>

</div>

@section Scripts{
	<script src="~/js/utility/modal.js"></script>
	<script src="~/js/users/show-info.js"></script>
}