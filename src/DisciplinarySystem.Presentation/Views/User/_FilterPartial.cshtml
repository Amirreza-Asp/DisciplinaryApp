@model DisciplinarySystem.Presentation.Controllers.Users.ViewModels.UserFilter;
@using DisciplinarySystem.Application.Helpers;

@{
    String showFilters = Model.IsEmpty()  ? "hide" : "";
    String startDate = Model.StartDate != default ? Model.StartDate.ToShamsi() : "";
    String endDate = Model.EndDate != default ? Model.EndDate.ToShamsi() : "";
}

<section class="my-3 @showFilters" id="users-filters">
    <div class="row">
        <div class="mb-3 col-md-3">
            <label class="form-label">نام و نام خانوادگی:</label>
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="mb-3 col-md-3 pr-5">
            <label class="form-label">نقش:</label>
            <div class="dropdown">
                <select class="form-control" asp-for="RoleId" asp-items="@Model.Roles">
                    <option selected></option>
                </select>
            </div>
        </div>
        <div class="mb-3 col-md-3 pr-5">
            <label class="form-label">تاریخ حضور:</label>
            <input id="start-date" name="StartDate" value="@startDate" width="100%" class="form-control" />
        </div>
        <div class="mb-3 col-md-3 pr-5">
            <label class="form-label">تاریخ پایان:</label>
            <input id="end-date" name="EndDate" value="@endDate" width="100%" class="form-control" />
        </div>


    <div class="text-center">
        <button type="submit" class="btn btn--submit">اعمال فیلتر</button>
    </div>
</section>