@using DisciplinarySystem.Application.Helpers
@using DisciplinarySystem.Presentation.Models
@model DisciplinarySystem.Presentation.Controllers.Invitations.ViewModels.GetAllInvitations


@section Styles{
	<link href="~/css/persianDateTime/kendo.common.min.css" rel="stylesheet" />
	<link href="~/css/persianDateTime/kendo.default.min.css" rel="stylesheet" />
	<link href="~/css/persianDateTime/custom.input.css" rel="stylesheet" />
}

@{
	var step = new CaseSteps { CaseId = Model.Filters.CaseId, ActiveStep = "Invitation"  , OnlySee = Model.Filters.OnlySee};
	<partial name="_CaseStepsPartial" model="@step" />
}

<div class="d-flex align-items-center justify-content-end mb-2">
	@if (!Model.Filters.OnlySee)
	{
		<a asp-action="Create" asp-route-caseId="@Model.Filters.CaseId" class="btn btn--add d-flex align-items-center">
			<i class="fa fa-plus ms-2"></i>افزودن دعوتنامه
			جدید
		</a>
	}
	<button onclick="ShowFilters('invitation-filters')" class="btn btn--filter d-flex align-items-center  me-2">
		<i class="fa fa-filter ms-2"></i>فیلتر
	</button>
</div>

<form method="get">
	<partial name="_FilterPartial" model="@Model.Filters" />
	<div class="table-overflow card shadow-sm">
		<div class="table ">
			<table class="table text-center" width="100%">
				<thead>
					<tr>
						<th class="table__row">ردیف</th>
						<th>موضوع</th>
						<th>تاریخ دعوت</th>
						<th>زمان دعوت</th>
						<th>تاریخ ایجاد</th>
						<th>عملیات</th>
					</tr>
				</thead>
				<tbody>

					@for (int i = 0; i < Model.Invitations.Count(); i++)
					{
						<tr>
							<td>@(i + 1 + Model.Filters.Skip)</td>
							<td>@Model.Invitations.ElementAt(i).Subject</td>
							<td> @Model.Invitations.ElementAt(i).InviteDate.ToShamsi()</td>
							<td> @Model.Invitations.ElementAt(i).InviteDate.TimeOfDay.ToString().Substring(0,5)</td>
							<td>@Model.Invitations.ElementAt(i).CreateDate.ToShamsi()</td>
							<td>
								<div class="table__action">
									<a class="btn btn--show" asp-action="Details" asp-route-id="@Model.Invitations.ElementAt(i).Id">
										<i class="fa fa-eye"></i>
									</a>
									@if (!Model.Filters.OnlySee)
									{
										<a class="btn btn--edit" asp-action="Update" asp-route-id="@Model.Invitations.ElementAt(i).Id">
											<i class="fa fa-edit"></i>
										</a>
										<a class="btn btn--delete" onclick="Delete('/Invitation/Remove/@Model.Invitations.ElementAt(i).Id' , 'دعوتنامه')"><i class="fa fa-trash"></i></a>
									}
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<partial name="_PagenationPartial" model="@Pagenation.Create(Model.Filters.Skip , Model.Filters.Take , Model.TotalCount)" />
</form>
@section Scripts{
	<script src="~/js/utility/removeAlert.js"></script>
	<script src="~/js/utility/pagenation.js"></script>
	<script src="~/js/persianDateTime/jquery-1.9.1.min.js"></script>
	<script src="~/js/persianDateTime/jquery.min.js"></script>
	<script src="~/js/persianDateTime/JalaliDate.js"></script>
	<script src="~/js/persianDateTime/kendo.web.js"></script>
	<script src="~/js/persianDateTime/fa-IR.js"></script>
	<script>
		$(document).ready(function () {
			$("#datepicker").kendoDatePicker();
		});
	</script>
}