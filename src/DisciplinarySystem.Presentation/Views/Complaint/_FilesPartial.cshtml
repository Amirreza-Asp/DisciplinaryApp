@model IEnumerable<DisciplinarySystem.Application.Complaints.ViewModels.Update.UpdateComplaintDocument>
@using DisciplinarySystem.Application.Helpers;

<div>
    <h4 class="mt-4">مدارک:</h4>
    <div class="table-overflow">
        <div class="table ">
            <table class="table text-center" width="100%">
                <thead>
                    <tr>
                        <th>عنوان مدرک</th>
                        <th>تاریخ ارسال</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CreateDate.ToShamsi()</td>
                            <td>
                                <div class="table__action">
                                    <a class="btn btn--show mx-2" asp-action="Download" asp-route-fileName="@item.Name" asp-route-file="@item.File">
                                        <i class="fa fa-download"></i>
                                    </a>
                                    <button type="button" class="btn btn--delete" onclick="Delete('/Complaint/RemoveFile/@item.Id' , 'فایل')"><i class="fa fa-trash"></i></button>

                                </div>
                            </td>
                        </tr>
                    }
                  
                </tbody>
            </table>
        </div>
    </div>
</div>