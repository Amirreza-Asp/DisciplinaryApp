@model DisciplinarySystem.Presentation.Controllers.Complaints.ViewModels.FilterVM


@{
	String showFilters = Model.isEmpty() ? "hide" : "";
}

<section class="my-2 complaints__filter @showFilters" id="complaint-filters">
	<div class="row">
		<div class="mb-3 col-md-3">
			<label for="studentNumber" class="form-label">شماره دانشجویی:</label>
			<input type="text"  asp-for="StudentNumber" class="form-control" id="studentNumber">
		</div>
		<div class="mb-3 col-md-3">
			<label for="nationalCode" class="form-label">کد ملی:</label>
			<input type="text" asp-for="NationalCode" class="form-control" id="nationalCode">
		</div>

		<div class="mb-3 col-md-3">
			<label for="firstName" class="form-label">نام و نام خانوادگی:</label>
			<input type="text" class="form-control" asp-for="FullName" id="firstName">
		</div>

		<div class="mb-3 col-md-3">
			<label for=" faculty" class="form-label">نام دانشکده:</label>
			<input type="text" maxlength="50" class="form-control" asp-for="College" id=" faculty">
		</div>

		<div class="mb-3 col-md-3">
			<label for="educational" class="form-label">نام گروه آموزشی:</label>
			<input type="text" class="form-control" asp-for="EducationalGroup" id="educational">
		</div>

		<div class="mb-3 col-md-3">
			<label for="grade" class="form-label">مقطع تحصیلی:</label>
			<input type="text" class="form-control" asp-for="Grade" id="grade">
		</div>
	</div>

	<div class="text-center">
		<button type="submit" class="btn btn--submit">اعمال فیلتر</button>
	</div>
</section>