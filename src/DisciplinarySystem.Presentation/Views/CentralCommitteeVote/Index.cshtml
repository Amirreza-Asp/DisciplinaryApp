@using DisciplinarySystem.Application.Helpers
@using DisciplinarySystem.Presentation.Models
@model DisciplinarySystem.Presentation.Controllers.CentralCommitteeVotes.ViewModels.GetAllComitteeVotes


	@{
	var steps = new CaseSteps { CaseId = Model.Filters.CaseId, ActiveStep = "CentralCommitteeVote", OnlySee = Model.Filters.OnlySee };
	<partial name="_CaseStepsPartial" model="@steps" />
}

<div class="d-flex align-items-center justify-content-end mb-2">
	@if (Model.CentralCommitteeVotes.Count() == 0 && !Model.Filters.OnlySee)
	{
		<a asp-action="Create" asp-route-caseId="@Model.Filters.CaseId" class="btn btn--add d-flex align-items-center">
			<i class="fa fa-plus ms-2"></i>افزودن حکم کمیته
			جدید
		</a>
	}
</div>

<form method="get">
	<input name="CaseId" value="@Model.Filters.CaseId" hidden />
	<input name="OnlySee" value="@Model.Filters.OnlySee" hidden />
	<div class="table-overflow card shadow-sm">
		<div class="table ">
			<table class="table text-center" width="100%">
				<thead>
					<tr>
						<th>تخلف</th>
						<th>حکم</th>
						<th>تاریخ ایجاد</th>
						<th>عملیات</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.CentralCommitteeVotes.Count(); i++)
					{
						<tr>
							<td>@Model.CentralCommitteeVotes.ElementAt(i).Violation.Title</td>
							<td>@Model.CentralCommitteeVotes.ElementAt(i).Verdict.Title</td>
							<td>@Model.CentralCommitteeVotes.ElementAt(i).CreateTime.ToShamsi()</td>
							<td>
								<div class="table__action">
									<a class="btn btn--show" asp-action="Details" asp-route-id="@Model.CentralCommitteeVotes.ElementAt(i).Id"><i class="fa fa-eye"></i></a>
									@if (!Model.Filters.OnlySee)
									{
										<a class="btn btn--edit" asp-action="Update" asp-route-id="@Model.CentralCommitteeVotes.ElementAt(i).Id"><i class="fa fa-edit"></i></a>
										<button type="button" class="btn btn--delete me-2" onclick="Delete('/CentralCommitteeVote/Remove?id=@Model.CentralCommitteeVotes.ElementAt(i).Id&caseId=@Model.Filters.CaseId' , 'حکم کمیته')"><i class="fa fa-trash"></i></button>
									}
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>

</form>
@section Scripts{
	<script src="~/js/utility/removeAlert.js"></script>
}