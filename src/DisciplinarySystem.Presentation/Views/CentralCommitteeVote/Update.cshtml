@using DisciplinarySystem.Application.Helpers
@using DisciplinarySystem.Presentation.Models
@model DisciplinarySystem.Application.DisciplinaryCase.CentralCommitteeVotes.ViewModels.UpdateCentralCommitteeVote

@{
	var steps = new CaseSteps { CaseId = Model.CaseId, ActiveStep = "CentralCommitteeVotes" };
	<partial name="_CaseStepsPartial" model="@steps" />
}

<div class="d-flex justify-content-end mb-3">
	<button type="button" onclick="history.back()" class="btn btn-secondary d-flex align-items-center">
		بازگشت
		<i class="fa fa-angle-left me-2"></i>
	</button>
</div>


<form method="post" enctype="multipart/form-data">
	<input asp-for="Id" hidden />
	<input asp-for="CreateTime" hidden />

	<div class="d-flex flex-column flex-md-row align-items-md-center  justify-content-between mb-2">
		<h3 class="mb-4 mb-lg-0">ویرایش حکم کمیته مرکزی</h3>
		<div class="d-flex gap-1 flex-column flex-sm-row">
			<div>
				<label class="form-label">شماره پرونده:</label>
				<input class="form-control" asp-for="CaseId" readonly>
			</div>
			<div>
				<label class="form-label">تاریخ ثبت:</label>
				<input type="text" value="@Model.CreateTime.ToShamsi()" class="form-control" readonly>
			</div>
		</div>
	</div>

	<div class="card shadow-sm">
		<section class="row">
			<div class="mb-3 col-md-4">
				<label class="form-label">عنوان تخلف:</label>
				<div class="dropdown">
					<select class="form-control" asp-items="@Model.Violations" asp-for="ViolationId"></select>
				</div>
				<span asp-validation-for="ViolationId" class="text-danger"></span>
			</div>
			<div class="mb-3 col-md-4">
				<label class="form-label">حکم رای اولیه:</label>
				<div class="dropdown">
					<select class="form-control" asp-for="VerdictId" asp-items="@Model.Verdicts"></select>
				</div>
				<span asp-validation-for="VerdictId" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label class="form-label">شرح:</label>
				<textarea class="form-control" rows="5" asp-for="Description"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label for="file">
					<span role="button" id="file-btn" class="btn btn--upload-file">
						بارگذاری مستندات
					</span>
					<input type="file" asp-for="Documents" id="file" hidden multiple />
				</label>
			</div>
		</section>
	</div>

	<div class="mt-3 text-center">
		<button class="btn btn--submit">
			ثبت
		</button>
	</div>
</form>

@if (Model.CurrentDocuments != null && Model.CurrentDocuments.Count() > 0)
{
	<div>
		<h4 class="mt-4">مدارک:</h4>
		<div class="table-overflow">
			<div class="table ">
				<table class="table text-center" width="100%">
					<thead>
						<tr>
							<th>عنوان مدرک</th>
							<th>تاریخ ارسال</th>
							<th>عملیات</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.CurrentDocuments)
						{
							<tr>
								<td>@item.Name</td>
								<td>@item.SendTime.ToShamsi()</td>
								<td>
									<div class="table__action">
										<a class="btn btn--show mx-2" asp-action="Download" asp-route-fileName="@item.Name" asp-route-file="@item.File.Name">
											<i class="fa fa-download"></i>
										</a>
										<button type="button" class="btn btn--delete" onclick="Delete('/CentralCommitteeVote/RemoveFile/@item.Id' , 'فایل')"><i class="fa fa-trash"></i></button>

									</div>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
}

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/utility/showFiles.js"></script>
	<script src="~/js/utility/removeAlert.js"></script>
}