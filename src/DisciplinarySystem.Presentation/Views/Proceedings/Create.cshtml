@using DisciplinarySystem.Application.Helpers
@model DisciplinarySystem.Application.Meetings.ViewModels.CreateProceedings


<div class="d-flex justify-content-end mb-3">
	<button type="button" onclick="history.back()" class="btn btn-secondary d-flex align-items-center">
		بازگشت
		<i class="fa fa-angle-left me-2"></i>
	</button>
</div>

<form method="post" >
	<input asp-for="RequestPath" hidden />
	<input asp-for="MeetingId" hidden/>
	<div class="d-flex flex-column flex-md-row align-items-md-center  justify-content-between mb-2">
		<h3 class="mb-4 mb-lg-0">افزودن صورت جلسه</h3>
		<div class="d-flex gap-1 flex-column flex-sm-row">
			<div>
				<label class="form-label">تاریخ ثبت:</label>
				<input type="text" value="@DateTime.Now.ToShamsi()" class="form-control" readonly>
			</div>
		</div>
	</div>

	<div class="card shadow-sm">
		<section class="row">
			<div class="mb-3 col-md-6">
				<label class="form-label">عنوان صورت جلسه:</label>
				<input type="text" class="form-control" asp-for="Title">
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label class="form-label">تصمیمات:</label>
				<textarea class="form-control" rows="8" asp-for="Description"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
		</section>
	</div>

	<div class="mt-3 text-center">
		<button class="btn btn--submit">
			ثبت
		</button>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}