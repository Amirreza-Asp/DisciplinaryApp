@using DisciplinarySystem.Application.Helpers
@using DisciplinarySystem.Presentation.Models
@model DisciplinarySystem.Presentation.Controllers.Violations.ViewModels.GetAllViolations

@section Styles{
	<link href="~/css/persianDateTime/kendo.common.min.css" rel="stylesheet" />
	<link href="~/css/persianDateTime/kendo.default.min.css" rel="stylesheet" />
	<link href="~/css/persianDateTime/custom.input.css" rel="stylesheet" />
}



@if (Model.Filters.CaseId > 0)
{
	var step = new CaseSteps
				{
					ActiveStep = "Violation",
					CaseId = Model.Filters.CaseId,
					OnlySee = Model.Filters.OnlySee
				};

	<partial name="_CaseStepsPartial" model="step" />
}

<form method="get">
	<input value="@Model.Filters.CaseId" name="caseId" hidden />

	<div class="d-flex align-items-start align-items-sm-center justify-content-between mb-2 flex-column flex-sm-row">
		<h3>تخلف ها</h3>
		<div class="d-flex align-items-center">
			@if (!Model.Filters.OnlySee)
			{
				<a asp-action="Create" asp-route-caseId="@Model.Filters.CaseId" class="btn btn--add d-flex align-items-center">
					<i class="fa fa-plus ms-2"></i>افزودن تخلف
					جدید
				</a>
			}
			<button type="button" onclick="ShowFilters('violation-filters')" class="btn btn--filter d-flex align-items-center  me-2">
				<i class="fa fa-filter ms-2"></i>فیلتر
			</button>
		</div>

	</div>



	<partial name="_FilterPartial" model="@Model.Filters" />


	<div class="table-overflow card card-shadow">
		<div class="table ">
			<table class="table text-center" width="100%">
				<thead>
					<tr>
						<th>ردیف</th>
						<th>عنوان</th>
						<th>نوع تخلف</th>
						<th>تاریخ ثبت</th>
						<th>تاریخ ویرایش</th>
						<th>رای صادره</th>
						<th>عملیات</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.Violations.Count; i++)
					{
						<tr>
							<td>@(i + 1 + Model.Filters.Skip)</td>
							<td>@Model.Violations[i].Title</td>
							<td>@Model.Violations[i].Category</td>
							<td>@Model.Violations[i].CreateDate.ToShamsi()</td>
							<td>
								@if (Model.Violations[i].UpdateDate.HasValue)
								{
									<span>@Model.Violations[i].UpdateDate.Value.ToShamsi()</span>
								}
								else
								{
									<span>_</span>
								}
							</td>
							<td>
								@if (!String.IsNullOrEmpty(Model.Violations[i].Vote))
								{
									<span>@Model.Violations[i].Vote</span>
								}
								else
								{
									<span>_</span>
								}
							</td>
							<td>
								<div class="table__action">
									<a class="btn btn--show" asp-action="Details" asp-route-id="@Model.Violations[i].Id"><i class="fa fa-eye"></i></a>
									@if (!Model.Filters.OnlySee)
									{
										<a class="btn btn--edit" asp-action="Update" asp-route-id="@Model.Violations[i].Id"><i class="fa fa-edit"></i></a>
										<button type="button" class="btn btn--delete me-2" onclick="Delete('/Violation/Remove/@Model.Violations[i].Id' , 'تخلف')"><i class="fa fa-trash"></i></button>
									}
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>

	<partial name="_PagenationPartial" model="@Pagenation.Create(Model.Filters.Skip , Model.Filters.Take , Model.TotalCount)" />
</form>


@section Scripts{
	<script src="~/js/utility/removeAlert.js"></script>
	<script src="~/js/utility/pagenation.js"></script>
	<script src="~/js/persianDateTime/jquery-1.9.1.min.js"></script>
	<script src="~/js/persianDateTime/jquery.min.js"></script>
	<script src="~/js/persianDateTime/JalaliDate.js"></script>
	<script src="~/js/persianDateTime/kendo.web.js"></script>
	<script src="~/js/persianDateTime/fa-IR.js"></script>
	<script>
		$(document).ready(function () {
			$("#datepicker").kendoDatePicker();
		});
	</script>
}