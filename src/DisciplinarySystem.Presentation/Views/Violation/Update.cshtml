@using DisciplinarySystem.Application.Helpers
@using DisciplinarySystem.Presentation.Models
@using DisciplinarySystem.SharedKernel
@model DisciplinarySystem.Application.Violations.ViewModels.Violation.UpdateViolation


@{
	var step = new CaseSteps { CaseId = Model.CaseId, ActiveStep = "Violation" };
	<partial name="_CaseStepsPartial" model="@step" />
}

<div class="d-flex justify-content-end mb-3">
	<button type="button" onclick="history.back()" class="btn btn-secondary d-flex align-items-center">
		بازگشت
		<i class="fa fa-angle-left me-2"></i>
	</button>
</div>

<form method="post" enctype="multipart/form-data">
	<input asp-for="CaseId" hidden />
	<input asp-for="Id" hidden/>
	<input asp-for="CreateDate" hidden/>
	<div class="d-flex flex-column flex-md-row align-items-md-center  justify-content-between mb-2">
		<h3 class="mb-4 mb-lg-0">ویرایش تخلف</h3>
		<div class="d-flex gap-1 flex-column flex-sm-row">	
			<div>
				<label class="form-label">تاریخ ثبت:</label>
				<input type="text" value="@Model.CreateDate.ToShamsi()" class="form-control" readonly>
			</div>
		</div>
	</div>

	<div class="card shadow-sm mt-3">
		<div class="row">
			<div class="mb-3 col-md-6">
				<label class="form-label">نوع تخلف:</label>
				<div class="dropdown">
				<select class="form-control" asp-for="CategoryId" asp-items="@Model.Categories"></select>
				</div>
			</div>
			<div class="mb-3 col-md-6">
				<label class="form-label">عنوان تخلف:</label>
				<input asp-for="Title"  class="form-control">
				<span class="text-danger" asp-validation-for="Title"></span>
			</div>

		</div>
		<div class="mb-3">
			<label class="form-label">شرح تخلف:</label>
			<textarea asp-for="Definition" class="form-control" rows="3"></textarea>
			<span class="text-danger" asp-validation-for="Definition"></span>
		</div>
		<div class="mt-3">
			<label for="file">
				<span role="button" id="file-btn" class="btn btn--upload-file">
					بارگذاری مستندات
				</span>
				<input type="file" asp-for="NewDocuments" id="file" hidden multiple />
			</label>
		</div>

	</div>
	<div class="mt-3 text-center">
		<button class="btn btn--submit">
			ثبت
		</button>
	</div>

</form>


@if (Model.CurrentDocuments != null && Model.CurrentDocuments.Count() > 0)
{
	<div>
		<h4 class="mt-4">مدارک:</h4>
		<div class="table-overflow">
			<div class="table ">
				<table class="table text-center" width="100%">
					<thead>
						<tr>
							<th>عنوان مدرک</th>
							<th>تاریخ ارسال</th>
							<th>عملیات</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.CurrentDocuments)
						{
							<tr>
								<td>@item.Name</td>
								<td>@item.SendTime.ToShamsi()</td>
								<td>
									<div class="table__action">
										<a class="btn btn--show mx-2" asp-action="Download" asp-route-fileName="@item.Name" asp-route-file="@item.File">
											<i class="fa fa-download"></i>
										</a>
										<button type="button" class="btn btn--delete" onclick="Delete('/Violation/RemoveFile/@item.Id' , 'فایل')"><i class="fa fa-trash"></i></button>

									</div>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
}

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/utility/showFiles.js"></script>
	<script src="~/js/utility/removeAlert.js"></script>
}
