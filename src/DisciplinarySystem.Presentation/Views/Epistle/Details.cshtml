@using DisciplinarySystem.Application.Helpers
@using DisciplinarySystem.Presentation.Models
@model DisciplinarySystem.Presentation.Controllers.Epistles.ViewModels.GetEpistleDetailsVM


@if (Model.WithSteps && Model.Epistle.CaseId.HasValue)
{
	var step = new CaseSteps
				{
					ActiveStep = "Epistle",
					CaseId = Model.Epistle.CaseId.Value
				};

	<partial name="_CaseStepsPartial" model="step" />
}

<div class="d-flex justify-content-end mb-3">
	<button type="button" onclick="history.back()" class="btn btn-secondary d-flex align-items-center">
		بازگشت
		<i class="fa fa-angle-left me-2"></i>
	</button>
</div>
<div class="d-flex flex-column flex-sm-row align-items-sm-center  justify-content-between mb-2">
	<h3 class="mb-sm-0 mb-4">مشاهده نامه</h3>
	<div>
		<div class="row">
			<div class="mb-3 col-md-6">
				<label class="form-label">شماره نامه:</label>
				<input dir="ltr" type="text" asp-for="@Model.Epistle.Id" class="form-control" id="letter-number"
					   readonly>
			</div>
			<div class="mb-3 col-md-6">
				<label class="form-label">تاریخ ثبت:</label>
				<input dir="ltr" value="@Model.Epistle.CreateDate.ToShamsi()" class="form-control" id="plaintiff-date" readonly>
			</div>
		</div>
	</div>
</div>
<section class="card mt-3">
	<div class="row mb-4">
		<div class="col-md-6">
			<h4 class="mt-4">فرستنده:</h4>
			<section class="card">
				<div>
					<label class="form-label">نام و نام خانوادگی:</label>
					<input type="text" asp-for="Epistle.Sender" class="form-control" readonly>
				</div>
			</section>
		</div>

		<div class="col-md-6">
			<h4 class="mt-4">گیرنده:</h4>
			<section class="card  p-3 ">
				<div>
					<label class="form-label">نام و نام خانوادگی:</label>
					<input type="text" asp-for="Epistle.Reciver" class="form-control" readonly>
				</div>
			</section>
		</div>
	</div>
	<div class="row">
		<div class="mb-3 col-md-6">
			<label class="form-label">شماره پرونده مرتبط:</label>
			<input min="1" type="text" asp-for="Epistle.CaseId" class="form-control" readonly>
		</div>
		<div class="mb-3 col-md-6">
			<label class="form-label">شماره شکایت مرتبط:</label>
			<input min="1" type="text" asp-for="Epistle.ComplaintId" class="form-control" readonly>
		</div>

		<div class="mb-3 col-md-6">
			<label class="form-label">موضوع نامه:</label>
			<input type="text" asp-for="Epistle.Subject" class="form-control" readonly>
		</div>
		<div class="mb-3 col-md-6">
			<label class="form-label">نوع نامه:</label>
			<input type="text" asp-for="Epistle.Type" class="form-control" readonly>
		</div>
	</div>
	<div class="mb-3">
		<label class="form-label">شرح نامه:</label>
		<textarea asp-for="Epistle.Description" class="form-control" rows="5" readonly></textarea>
	</div>
</section>


@if (Model.Epistle.Documents != null && Model.Epistle.Documents.Count() > 0)
{
	<div>
		<h4 class="mt-4">مدارک:</h4>
		<div class="table-overflow">
			<div class="table ">
				<table class="table text-center" width="100%">
					<thead>
						<tr>
							<th>عنوان مدرک</th>
							<th>تاریخ ارسال</th>
							<th>عملیات</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.Epistle.Documents)
						{
							<tr>
								<td>@item.Name</td>
								<td>@item.SendTime.ToShamsi()</td>
								<td>
									<div class="table__action">
										<a class="custom-btn custom-btn__show mx-2" asp-action="Download" asp-route-fileName="@item.Name" asp-route-file="@item.File.Name">
											<i class="fa fa-download"></i>
										</a>
									</div>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
}
<div class="backdrop"></div>
