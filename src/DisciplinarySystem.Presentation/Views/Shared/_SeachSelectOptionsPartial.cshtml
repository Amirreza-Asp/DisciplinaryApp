@model DisciplinarySystem.Presentation.Models.SearchSelectBox

@*add search-select-options styles*@


<div class="select-container">

    <input name="@Model.For" hidden>
    <div class="select">
        <div class="select-search">
            <input name="select"
                   placeholder="جستجو و انتخاب"
                   class="form-control input-select"
                   onkeyup="SearchOptions(this)"
                   onclick="ToggleOptions(this)" />
        </div>
    </div>

    <ul class="select-list" id="options">
        @if ( Model.Items != null )
        {
            @foreach ( var item in Model.Items )
            {
                <li class="select-item search-options" onclick="SetOption(this)">
                    <div value="@item.Value">@item.Text</div>
                </li>
            }
        }
    </ul>
</div>

@*add search-select-options js*@